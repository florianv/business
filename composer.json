{
    "name": "florianv/business",
    "type": "library",
    "description": "DateTime calculations in business hours",
    "keywords": [
        "business",
        "hour",
        "date",
        "time",
        "schedule"
    ],
    "homepage": "https://github.com/florianv/business",
    "license": "MIT",
    "authors": [
        {
            "name": "Florian Voutzinos",
            "email": "florian@voutzinos.com",
            "homepage": "http://florian.voutzinos.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0.0",
        "jeremeamia/superclosure": "^2.1"
    },
    "suggest": {
        "jeremeamia/superclosure": "Allows to serialize special days"
    },
    "autoload": {
        "psr-4": {
            "Business\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Business\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
